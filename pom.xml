			    <artifactId>msgpack-core</artifactId>
			    <version>${msgpack.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<scm>
		<tag>master</tag>
		<url>https://github.com/junxworks/junx</url>
		<connection>scm:git:git://github.com/junxworks/junx.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/junxworks/junx.git</developerConnection>
	</scm>

	<issueManagement>
		<system>Github issues</system>
		<url>https://github.com/junxworks/junx/issues</url>
	</issueManagement>
	
	<build>
			<plugins>
				<!-- Compiler 插件, 设定JDK版本 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${maven-compiler-plugin.version}</version>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
						<showWarnings>true</showWarnings>
					</configuration>
				</plugin>
				<!-- 新增发布插件与源码打包插件，让发布的jar包带源码 Michael2017-5-15 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
				</plugin>
				<plugin>  
	                <artifactId>maven-source-plugin</artifactId>  
	                <configuration>  
	                    <attach>true</attach>  
	                </configuration>  
	                <executions>  
	                    <execution>  
	                        <phase>compile</phase>  
	                        <goals>  
	                            <goal>jar</goal>  
	                        </goals>  
	                    </execution>  
	                </executions>  
	            </plugin>
	            <plugin>
			      <groupId>org.apache.maven.plugins</groupId>
			      <artifactId>maven-javadoc-plugin</artifactId>
			      <version>${maven-javadoc-plugin.version}</version>
			      <executions>
			        <execution>
			          <id>attach-javadocs</id>
			          <goals>
			            <goal>jar</goal>
			          </goals>
			          <configuration>
						<additionalparam>-Xdoclint:none</additionalparam>
					  </configuration>
			        </execution>
			      </executions>
			    </plugin>
			    <plugin>
			      <groupId>org.apache.maven.plugins</groupId>
			      <artifactId>maven-gpg-plugin</artifactId>
			      <version>${maven-gpg-plugin.version}</version>
			      <executions>
			        <execution>
			          <id>sign-artifacts</id>
			          <phase>verify</phase>
			          <goals>
			            <goal>sign</goal>
			          </goals>
			        </execution>
			      </executions>
			    </plugin>
			</plugins>
	</build>
  
  <modules>
  	<module>junx-core</module>
  	<module>junx-cache</module>
  	<module>junx-event</module>
  	<module>junx-netty</module>
  	<module>junx-stat</module>
  	<module>junx-spel</module>
  </modules>
</project>